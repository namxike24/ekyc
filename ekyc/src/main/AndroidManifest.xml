    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:requestLegacyExternalStorage="true">
        <activity
            android:name=".presentation.home.HomeActivity"
            android:exported="false"
            android:theme="@style/FBaseTheme" />

        <activity
            android:name="ai.ftech.ekyc.presentation.picture.take.TakePictureActivity"
            android:exported="false"
            android:theme="@style/FBaseTheme" />

        <activity
            android:name="ai.ftech.ekyc.presentation.picture.preview.PreviewPictureActivity"
            android:exported="false"
            android:theme="@style/FBaseTheme" />

        <activity
            android:name=".presentation.picture.confirm.ConfirmPictureActivity"
            android:exported="false"
            android:theme="@style/FBaseTheme" />

        <activity
            android:name=".presentation.info.EkycInfoActivity"
            android:exported="false"
            android:theme="@style/FBaseTheme"
            android:windowSoftInputMode="adjustPan" />
    </application>
</manifest>
