<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSearchView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fbase_dimen_44"
    android:layout_marginHorizontal="@dimen/fbase_dimen_16"
    android:background="@drawable/fekyc_shape_rectange_white_bg_gray_stroke_corner_8"
    android:gravity="center"
    android:paddingHorizontal="@dimen/fbase_dimen_12">

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/FBaseIcon20"
        android:src="@drawable/fekyc_ic_search" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearchViewItm"
        style="@style/FBaseStyleText12Bold"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/fbase_dimen_8"
        android:layout_weight="1"
        android:background="@null"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColor="@color/fekyc_color_text_black"
        android:textColorHint="@color/fekyc_color_text_hint" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSearchViewItmClear"
        style="@style/FBaseIcon20"
        android:src="@drawable/fekyc_ic_close_gray" />

</androidx.appcompat.widget.LinearLayoutCompat>
