<?xml version="1.0" encoding="utf-8"?>
<!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fbase_dimen_90"
    android:background="@drawable/fekyc_bg_header"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fbase_dimen_56"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivToolbarClose"
            android:layout_width="@dimen/fbase_dimen_56"
            android:layout_height="@dimen/fbase_dimen_56"
            android:layout_marginStart="@dimen/fbase_dimen_10"
            android:background="?selectableItemBackground"
            android:padding="@dimen/fbase_dimen_12"
            android:src="@drawable/fekyc_ic_close" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvToolbarTitle"
            style="@style/FBaseStyleRegular"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="25"
            android:maxLines="1"
            tools:text="Chọn loại giấy tờ Chọn loại giấy tờ Chọn loại giấy tờ" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvToolbarRightText"
            style="@style/FBaseStyleRegular"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/fbase_dimen_60"
            android:layout_height="@dimen/fbase_dimen_36"
            android:background="?selectableItemBackground"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginEnd="@dimen/fbase_dimen_24"
            android:visibility="visible"
            android:maxLines="1"
            tools:visibility="gone"
            tools:text="Trợ giúp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivToolbarRightIcon"
            android:layout_width="@dimen/fbase_dimen_56"
            android:layout_height="@dimen/fbase_dimen_56"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/fbase_dimen_24"
            android:background="?selectableItemBackground"
            android:padding="@dimen/fbase_dimen_14"
            android:src="@drawable/fekyc_ic_question_white"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</merge>
